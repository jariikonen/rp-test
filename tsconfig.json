{
  "include": [
    "src",
    "tsdown.config.ts",
    "vitest.config.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "preserve",
    "lib": [
      "ES2022"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    /* Debugging */
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false,
    /* Vitest */
    "types": [
      "vitest/globals"
    ]
  }
}
